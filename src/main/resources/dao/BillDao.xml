<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.CardDao">
    <select id="detailsByBillId" resultType="bo.ucb.edu.ingsoft.model.Bill">
        SELECT
            bill_id as billId,
            user_id as userId,
            payment_plan_id as paymentPlanId,
            card_id as cardId,
            projects_id as projectsId,
            buy_date as buyDate,
            billing_address as billingAddress,
            country as country,
            city as city,
            status as status

        FROM bill
        WHERE
            bill_id = #{billId}
    </select>

    <insert id="createBill" parameterType="bo.ucb.edu.ingsoft.model.Bill">
        INSERT INTO bill VALUES (
            null,
            #{userId},
            #{paymentPlanId},
            #{cardId},
            #{projectsId},
            #{buyDate},
            #{billingAddress},
            #{country},
            #{city},
            #{status},
            #{transaction.txId},
            #{transaction.txHost},
            #{transaction.txUserId},
            #{transaction.txDate}
        )
    </insert>
</mapper>