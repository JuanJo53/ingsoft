<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.PaymentPlanDao">
    <select id="detailsPaymentPlanId" resultType="bo.ucb.edu.ingsoft.model.PaymentPlan">
        SELECT
            payment_plan_id as paymentPlanId,
            plan as plan,
            description as description,
            cost as cost,
            duration as duration,
            creation_date as creationDate

        FROM payment_plan
        WHERE
            payment_plan_id = #{paymentPlanId}
    </select>

    <insert id="newPaymentPlan" parameterType="bo.ucb.edu.ingsoft.model.PaymentPlan">
        INSERT INTO payment_plan VALUES (
            null,#{plan},#{description}, #{cost},#{duration}, #{creationDate},
            #{transaction.txId},#{transaction.txHost},#{transaction.txUserId},#{transaction.txDate}
        )
    </insert>
</mapper>
